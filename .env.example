# Hospital Management System - Environment Variables

# Flask Configuration
FLASK_ENV=development
FLASK_APP=src.app:create_app
SECRET_KEY=change-me-in-production-with-secure-random-key

# Database Configuration (PostgreSQL)
DB_USER=hospital_user
DB_PASSWORD=hospital_password
DB_NAME=hospital_management
DB_PORT=5432
DATABASE_URL=postgresql://hospital_user:hospital_password@db:5432/hospital_management

# Application Server
APP_PORT=5001
NGINX_PORT=80

# Gunicorn Configuration
WORKERS=4
WORKER_TIMEOUT=120

# Security
WTF_CSRF_ENABLED=True

# Logging
LOG_LEVEL=INFO
